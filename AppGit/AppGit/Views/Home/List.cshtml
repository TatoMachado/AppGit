@model Search

@{
    ViewData["Title"] = "Home Page";
    
}

<h1 class="h3 mb-2 text-gray-800">Resultados</h1>
                    <p class="mb-4">Exibindo os resultados iniciais.</p>

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Total de Resultados</h6>
                            <h6 class="m-0 font-weight-bold text-primary">@Html.DisplayFor(modelItem => modelItem.total_count)</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Owner</th>
                                            <th>Html Url</th>
                                            <th>Description</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Name</th>
                                            <th>Owner</th>
                                            <th>Html Url</th>
                                            <th>Description</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                    @foreach (var item in Model.items) {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.name)</td>
                                            <td>@Html.DisplayFor(modelItem => item.owner.login)</td>
                                            <td>@Html.DisplayFor(modelItem => item.html_url)</td>
                                            <td>@Html.DisplayFor(modelItem => item.description)</td>
                                        </tr>
                                    }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>



